<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pedago2.Profil.LengkapiProfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/hijau1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selected" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_line_white" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/dua" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/horizontal_line_white" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/tiga" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/btn_logout2" />

                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Logout"
                    android:textColor="#ffffff"
                    android:textSize="8sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>
