<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.73"
                        android:src="@drawable/ic_pedago2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.27"
                        android:gravity="center"
                        android:text="FASHION WANITA"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.73"
                        android:src="@drawable/ic_pedago2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.27"
                        android:gravity="center"
                        android:text="PERLENGKAPAN HAJI &amp; UMRAH"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.73"
                        android:src="@drawable/ic_pedago2" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.27"
                        android:gravity="center"
                        android:text="FASHION PRIA"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="&#34;Ceritakan alasan mengapa anda menginginkan produk ini. Cerita yang menarik akan mendapatkan barang tersebut gratis&quot;" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.73"
                        android:src="@drawable/ic_pedago2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.27"
                        android:gravity="center"
                        android:text="ELEKTRONIK"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.73"
                        android:src="@drawable/ic_pedago2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.27"
                        android:gravity="center"
                        android:text="OLEH - OLEH HAJI &amp; UMRAH"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.73"
                        android:src="@drawable/ic_pedago2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.27"
                        android:gravity="center"
                        android:text="BIG FREE"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:padding="5dp"
                android:text="Rincian Produk
        &#10;Type	:	L-Twin, 2 Desmodromically actuated valves per cylinder, air cooled
        &#10;Displacement	:	803cc
        &#10;Bore x Stroke	:	88 x 66mm
        &#10;Compression ratio	:	11:01
        &#10;Power	:	64kW – 87 CV @ 8250 rpm
        &#10;Torque	:	78 Nm – 8 kgm @ 6250 rpm
        &#10;Fuel injection	:	Electronic fuel injection, 45mm throttle body with stepper motor
        &#10;Exhaust	:	Lightweight 2-1-2 system with catalytic converter and twin lambda probes" />

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <Button
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="A" />

                    <Button
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="B" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dip">

                    <Button
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="C" />

                    <Button
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="D" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/coment" />
                <!--style="@style/Base.TextAppearance.AppCompat.Large"-->
                <LinearLayout
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v4.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <EditText
                            android:id="@+id/et_cerita"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:descendantFocusability="blocksDescendants"
                            android:ems="10"
                            android:enabled="true"
                            android:fadeScrollbars="false"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:hint="Ceritakan mengapa anda menginginkan barang ini"
                            android:imeActionId="@+id/et_cerita"
                            android:imeActionLabel="Cerita Anda"
                            android:imeOptions="normal"
                            android:inputType="textMultiLine"
                            android:isScrollContainer="true"
                            android:maxLines="6"
                            android:minLines="6"
                            android:overScrollMode="always"
                            android:paddingLeft="7dp"
                            android:scrollbarFadeDuration="0"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical" />


                    </android.support.v4.widget.NestedScrollView>

                    <!--     android:scrollbarThumbVertical="@drawable/scrollbar_effect"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:textIsSelectable="true" -->

                </LinearLayout>
                <!--
          //supaya bisa pake scroll di edit text
        ((EditText) findViewById(R.id.et_cerita)).setOnTouchListener(new View.OnTouchListener() {
            public boolean onTouch(View v, MotionEvent event) {
                v.getParent().requestDisallowInterceptTouchEvent(true);

                switch (event.getAction() & MotionEvent.ACTION_MASK) {
                    case MotionEvent.ACTION_UP:
                        v.getParent().requestDisallowInterceptTouchEvent(false);
                        break;
                }
                return false;
            }
        });
        -->

            </LinearLayout>

            <TableLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10"
                        android:text="1." />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Anda wajib melakukan pendaftaran akun (login) untuk mendapatkan produk gratis " />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10"
                        android:text="2." />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Anda wajib memberikan komentar produk gratis sebagai bahan penilaian kami " />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10"
                        android:text="3." />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Penilaian melalui hitungan point dari kata kunci yang telah kami tentukan sebagai landasan penilaian " />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10"
                        android:text="4." />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Ketika anda memberikan ulasan cerita, anda wajib melakukan share / membagikan ulasan cerita anda melalui sosial media untuk mendapatkan point tersendiri" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10"
                        android:text="5." />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Tampilan produk baik itu warna, ukuran dan detail lainnya terlampir di deskripsi produk gratis " />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10"
                        android:text="6." />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Info pemenang akan kami tampilkan secepatnya setelah kuota cerita telah terpenuhi " />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10"
                        android:text="7." />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Pemenang akan dikonfirmasi oleh team pedago.id untuk informasi pengiriman barang " />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10"
                        android:text="8." />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Produk gratis yang Anda dapatkan tidak dapat dialihkan ke orang lain dan tidak dapat diuangkan " />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>