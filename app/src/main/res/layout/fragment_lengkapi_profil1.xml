<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pedago2.Profil.LengkapiProfil1Fragment">

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_heightPercent="100%"
                app:layout_widthPercent="100%">

                <LinearLayout
                    android:id="@+id/header_lengkapi_profil2"
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/background_atas_lengkapi_profil2"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    app:layout_heightPercent="30%"
                    app:layout_widthPercent="100%">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_nama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nama"
                                android:textColor="#ffffff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=", selamat datang"
                                android:textColor="#ffffff" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="50dp"
                            android:text="di Pedago."
                            android:textColor="#ffffff" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lengkapi data"
                            android:textColor="#ffffff" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="profile mu dengan"
                            android:textColor="#ffffff" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="mengisi 3 langkah"
                            android:textColor="#ffffff" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="berikut."
                            android:textColor="#ffffff" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.pedago2.Components.CircleImageView
                            android:id="@+id/iv_foto"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/einstein"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:id="@+id/tv_nama_foto"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="Nama"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tv_sunting_foto"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="Sunting Profil"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/view3"
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/header_lengkapi_profil2"
                    android:background="#DEBD6C"
                    app:layout_heightPercent="3%"
                    app:layout_widthPercent="100%" />

                <LinearLayout
                    android:id="@+id/header_lengkapi_profil3"
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/view3"
                    android:background="@drawable/background_atas_lengkapi_profil3"
                    android:orientation="vertical"
                    app:layout_heightPercent="50%"
                    app:layout_widthPercent="100%">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:text="Pendidikan saat ini"
                        android:textColor="#ffffff"
                        tools:ignore="RtlSymmetry" />

                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_heightPercent="100%">

                        <Button
                            android:id="@+id/btn_smp"
                            android:layout_width="0dip"
                            android:layout_height="0dip"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/logo_smp"
                            app:layout_heightPercent="30%"
                            app:layout_widthPercent="30%" />

                        <Button
                            android:id="@+id/btn_sma"
                            android:layout_width="0dip"
                            android:layout_height="0dip"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/btn_smp"
                            android:layout_toRightOf="@id/btn_smp"
                            android:background="@drawable/logo_sma"
                            app:layout_heightPercent="30%"
                            app:layout_widthPercent="30%" />
                    </android.support.percent.PercentRelativeLayout>

                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_heightPercent="100%">

                        <TextView
                            android:id="@+id/tv_kelas"
                            android:layout_width="0dip"
                            android:layout_height="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:text="Kelas"
                            android:textColor="#ffffff"
                            app:layout_heightPercent="20%"
                            app:layout_widthPercent="20%" />

                        <Button
                            android:id="@+id/btn_sepuluh"
                            android:layout_width="0dip"
                            android:layout_height="0dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toEndOf="@id/tv_kelas"
                            android:layout_toRightOf="@id/tv_kelas"
                            android:background="@drawable/btn_sepuluh_selected"
                            app:layout_heightPercent="20%"
                            app:layout_widthPercent="15%" />

                        <Button
                            android:id="@+id/btn_sebelas"
                            android:layout_width="0dip"
                            android:layout_height="0dp"
                            android:layout_alignBottom="@+id/btn_sepuluh"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toEndOf="@id/btn_sepuluh"
                            android:layout_toRightOf="@id/btn_sepuluh"
                            android:background="@drawable/btn_sebelas_unselected"
                            app:layout_heightPercent="20%"
                            app:layout_widthPercent="15%" />

                        <Button
                            android:id="@+id/btn_duabelas"
                            android:layout_width="0dip"
                            android:layout_height="0dp"
                            android:layout_alignBottom="@+id/btn_sebelas"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toEndOf="@id/btn_sebelas"
                            android:layout_toRightOf="@id/btn_sebelas"
                            android:background="@drawable/btn_duabelas_unselected"
                            app:layout_heightPercent="20%"
                            app:layout_widthPercent="15%" />

                    </android.support.percent.PercentRelativeLayout>

                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:paddingEnd="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingStart="10dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:text="Lokasi Sekolah"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tv_provinsi"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/textView5"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/round_rectangle_frame_white"
                            android:gravity="center"
                            android:text="Provinsi"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tv_kota"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/tv_provinsi"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/round_rectangle_frame_white"
                            android:gravity="center"
                            android:text="Kota"
                            android:textColor="#ffffff" />
                    </android.support.percent.PercentRelativeLayout>

                </LinearLayout>

            </android.support.percent.PercentRelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
