<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pedago2.PanggilTutor.PanggilTutorActivity"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hijau1"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/Theme.DesignDemo.AppBarOverlay"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/hijau1"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/Theme.DesignDemo.PopupOverlay">

        </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_header"
            android:layout_height="100dp">
            <!--<ImageView-->
                <!--android:id="@+id/imageView"-->
                <!---->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="100dp" />-->
           <android.support.v7.widget.RecyclerView
               android:id="@+id/recyclerview_list"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
        </RelativeLayout>


        <!--<android.support.design.widget.TabLayout-->
            <!--android:id="@+id/tabs_layout_pgl_tutor"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/hijau3"/>-->

        <RadioGroup
            android:id="@+id/tabs_group"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RadioButton
                android:id="@+id/tabs_one"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_tabs"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="Kelas \n 1 SMA" />

            <RadioButton
                android:id="@+id/tabs_two"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_tabs"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="Kelas \n 2 SMA"/>
            <RadioButton
                android:id="@+id/tabs_tree"
                android:layout_weight="1"
                android:background="@drawable/bg_tabs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="Kelas \n 3 SMA"/>
        </RadioGroup>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_pgl_tutor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@+id/appbar" />
</LinearLayout>
